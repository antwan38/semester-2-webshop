@{
    ViewData["Title"] = "NewGadgetForm";
}
@model webShopASP.Models.GadgetViewModel;
@{
    string result = "";
    foreach ( char a in Convert.ToString(Model.Prijs))
    {
        if (a != ',')
        {
            result = result + a;
        }
        else
        {
            result = result + '.';
        }
    }
 }
<body>
    <div class="LogIn">
    <p class="LoginError">@ViewBag.Info</p>
    <form method="post" asp-controller="Gadget" asp-action="InfoGadget">
    
        <div class="form-group">
        <label asp-for="Naam">Naam</label>
        <input class="form-control" type="text" asp-for="Naam" />
        <span asp-validation-for="Naam"></span>
    </div>
    <br />
     <div class="form-group">
        <label asp-for="Prijs">Prijs</label>
        <input class="form-control" type="number" step="0.01" min="1" asp-for="Prijs" value="@result"/>
        <span asp-validation-for="Prijs"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Categorie">Categorie</label>
        <input class="form-control" type="text" asp-for="Categorie" />
        <span asp-validation-for="Categorie"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Aantal">Aantal</label>
        <input class="form-control" type="range" value="@Model.Aantal" min="1" max="100" oninput="this.nextElementSibling.value = this.value" asp-for="Aantal" />
        <output>@Model.Aantal</output>
        <span asp-validation-for="Aantal"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Beschrijving">Beschrijving</label>
        <textarea class="form-control" asp-for="Beschrijving"> </textarea>
        <span asp-validation-for="Beschrijving"></span>
    </div>
    <input type="hidden" asp-for="GadgetNummer" value="@Model.GadgetNummer" />
    <br />
    <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Opslaan</button> </div>


    </form> 
     
        
    </div>
    <div class="delete">
        <a asp-controller="Gadget" asp-action="GadgetVerwijder" asp-route-GadgetID="@Model.GadgetNummer">
            <input  type="button" class="btn btn-primary" value="Verwijder"/>
        </a>
    </div>
</body>